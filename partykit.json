{
  "$schema": "https://www.partykit.io/schema.json",
  "name": "snapquiz",
  "main": "src/server.ts",
  "compatibilityDate": "2025-10-23",
  "build": {
    "command": "npm run build:css",
    "watch": "src"
  },
  "serve": {
    "path": "public",
    "build": {
      "entry": "src/main.tsx",
      "bundle": true,
      "splitting": true,
      "outdir": "public/dist",
      "minify": true,
      "format": "esm",
      "sourcemap": true
    }
  }
}